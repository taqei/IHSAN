<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink50"
    tools:context="com.taqeiddine.ihsan.Activities.PublicationActivities.SignalPnDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/detailspn_intervenir">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/detailspnBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:background="@color/pink100">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detailspn_photo_profil"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/pink" />

                        <TextView
                            android:id="@+id/detailspn_nom_prenom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:text="taqei iddine"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detailspn_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Vendredi 09 Mars 2018"
                                android:textColor="@color/white"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/detailspn_heure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="18:30"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/detailspn_plus"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pink"
                        android:textSize="20sp"
                        tools:text="TITRE"
                        android:id="@+id/detailspn_Titre"/>

                    <TextView
                        android:id="@+id/detailspn_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/pink"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="SDF" />

                    <TextView
                        android:id="@+id/detailspn_desctip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/pink400"
                        android:textSize="12sp"
                        tools:text="hhhhhhhhhhhhhhh" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Localisation"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/detailspn_localisation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Kouba Algerrrrrrrr"
                        android:textColor="#23b181"
                        android:layout_marginLeft="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/detailspn_recy_photos"
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_marginTop="10dp"
                    android:overScrollMode="never"
                    android:layout_gravity="center"></android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:layout_margin="7dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liste de besoins"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/detailspn_recyclerbesoins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"></android.support.v7.widget.RecyclerView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numéro de téléphone"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/detailspn_numphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:text="0552 62 27 13"
                        android:textColor="#23b181"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    android:background="#f9f5e9"
                    android:gravity="center_vertical"
                    android:clickable="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/poss"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Kouba, Algiers."
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#ce2007"
                        android:id="@+id/detailspn_adresse"/>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/pink400"
        android:gravity="center"
        android:id="@+id/detailspn_intervenir"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTERVENIR"
            android:textSize="22sp"
            android:textStyle="bold"
            android:clickable="true"/>
    </RelativeLayout>
</RelativeLayout>
